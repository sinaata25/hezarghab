<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center"
    android:background="@color/loading_background">

    <ImageView
        android:id="@+id/intro1_image"
        android:layout_width="280dp"
        android:layout_height="299dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/intros1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/intro1_title"
        android:layout_width="281dp"
        android:layout_height="63dp"
        android:fontFamily="@font/hekayat"
        android:gravity="center"
        android:text="@string/welcome"
        android:textSize="30dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro1_image" />

    <TextView
        android:id="@+id/intro1_text"
        android:layout_width="280dp"
        android:layout_height="74dp"
        android:layout_marginBottom="84dp"
        android:text=" در چند ساعت آینده قراره با ما توی دنیای جذابی که ساختیم غرق بشی"
        android:textSize="20dp"
        android:fontFamily="@font/hekayat"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro1_title"
        app:layout_constraintVertical_bias="0.0" />




</androidx.constraintlayout.widget.ConstraintLayout>