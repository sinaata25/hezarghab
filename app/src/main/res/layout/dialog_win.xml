<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardstyle1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">



                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/win_imgview"
                    android:layout_height="150dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_dialog"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/hekayat"
                android:padding="2dp"
                android:gravity="center"
                android:text="خرس"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="25dp" />



            <Button
                android:layout_width="match_parent"
                android:background="@drawable/cardstyle2"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/next_q"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:id="@+id/win_next"
                android:fontFamily="@font/hekayat"
                android:layout_height="40dp"/>
            <Button
                android:layout_width="match_parent"
                android:background="@drawable/cardstyle4"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/exit_win"
                android:fontFamily="@font/hekayat"
                android:layout_height="30dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>