<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/loading_background"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_weight=".8"
        android:id="@+id/viewpager_main"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tablayout_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight=".2"
        android:gravity="center"
        android:layout_height="150dp">

        <Button
            android:layout_width="65dp"
            android:id="@+id/btn_setting_home"
            android:layout_weight=".2"
            android:layout_height="70dp"
            android:background="@drawable/ic_setting" />
        <Button
            android:layout_width="65dp"
            android:layout_weight=".2"
            android:id="@+id/btn_info_home"
            android:layout_height="70dp"
            android:background="@drawable/ic_info" />
        <Button
            android:layout_width="100dp"
            android:layout_weight=".2"
            android:id="@+id/btn_home_home"
            android:layout_height="105dp"
            android:background="@drawable/ic_home" />
        <Button
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:id="@+id/btn_shop_home"
            android:layout_weight=".2"
            android:background="@drawable/ic_shop" />
        <Button
            android:layout_width="65dp"
            android:id="@+id/btn_profile_home"
            android:layout_weight=".2"
            android:layout_height="70dp"
            android:background="@drawable/ic_profile" />



    </LinearLayout>



</LinearLayout>